<div class="ui container">
  <br/>
  <h1 class="ui grey header">
    全部分类
  </h1>
  <% @categories.each do |category| %>
  <h2 class="ui grey header">
    <%= link_to category.category_name, '#', title:category.category_brief,
      id:"category-#{category.id}" %>
  </h2>
  <%= link_to '编辑', edit_category_path(category) %>&nbsp;&nbsp;/&nbsp;&nbsp;
  <%= link_to '查看', category_path(category), data: { no_turbolink: true } %>&nbsp;&nbsp;/&nbsp;&nbsp;
  <%= link_to '删除', category_path(category), method: :delete, data: {confirm:'确定要删除吗？'} %>
  <% end %>
  <br/>
  <h3 class="ui header">
    <%= link_to '添加分类', new_category_path %>
  </h3>
</div>
