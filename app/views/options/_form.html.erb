<%= form_for(@option, html: {class: "ui form"}) do |f| %>

    <% if @option.errors.any? %>
        <!-- <script>
          $(".ui.form").addClass("error");
          $(".field_with_errors").parent().addClass("error");
        </script> -->
        <div id="error_explanation">
          <div class="ui error message">
            <div class="header">
              The form contains
              <%= pluralize(@option.errors.count, "error") %>.
            </div>

            <ul class="list">
              <% @option.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>
    <br/>
    <div class="field">
      <%= f.text_field :site_header, class: "category-input", placeholder: "站点标题", autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.text_field :site_sub_header, class: "category-input", placeholder: "站点副标题", autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.text_field :user_name, class: "category-input", placeholder: "用户名", autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.text_field :password, class: "category-input", placeholder: "密码", autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.text_field :email, class: "category-input", placeholder: "邮箱", autocomplete: "off" %>
    </div>

    <% if @option.errors.any? %>
        <script>
          $(".ui.form").addClass("error");
          $(".field_with_errors").parent().addClass("error");
        </script>
    <% end %>

    <%= f.submit "完成", class: "ui submit fluid button" %>
<% end %>
